sense.set_pixels(space)
while True:
  while (p[0] != space_size-1):
    p[0]+= 1
    sense.set_pixel(p[0], p[1], 255, 0, 0)
    sense.set_pixel(p[0]-3, p[1], 0, 0, 0)
    sleep(speed)
  while (p[0] != light_len-1 ):
    p[0]-= 1
    sense.set_pixel(p[0]-2, p[1], 255, 0, 0)
    sense.set_pixel(p[0]+1, p[1], 0, 0, 0)
    sleep(speed)
